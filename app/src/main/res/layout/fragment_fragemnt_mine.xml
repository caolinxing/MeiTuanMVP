<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".fragment.mine.Fragment_mine">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:orientation="vertical"
       android:background="#FFD161">
      <include
          layout="@layout/item_header_layout"
          android:layout_height="45dp"
          android:layout_width="match_parent"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <ImageView
             android:id="@+id/mine_iv_touxiang"
             android:layout_marginTop="3dp"
             android:layout_marginLeft="20dp"
             android:layout_marginBottom="5dp"
             android:layout_width="55dp"
             android:layout_height="55dp"
             android:src="@drawable/touxian1"/>
         <TextView
             android:id="@+id/mine_tv_uname"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical"
             android:textSize="20sp"
             android:text="@string/login_zhuce"
             android:layout_marginLeft="20dp"
             android:layout_marginBottom="10dp" />
      </LinearLayout>
   </LinearLayout>
   <android.support.v7.widget.RecyclerView
       android:background="#ffffff"
       android:id="@+id/mine_grid_view1"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginTop="10dp"
       android:layout_weight="4"/>
   <LinearLayout
       android:layout_marginTop="8dp"
       android:background="#ffffff"
       android:layout_width="match_parent"
       android:layout_weight="3"
       android:layout_height="0dp"
       android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="我的资产"
          android:textSize="20sp"
          android:layout_marginLeft="10dp"
          android:padding="5dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#F4F4F4"
          android:layout_marginLeft="10dp"
          android:padding="5dp"/>
       <include android:layout_height="1dp"
           android:layout_width="match_parent"
           layout="@layout/xiantiao_layout"/>
       <android.support.v7.widget.RecyclerView
           android:background="#ffffff"
           android:id="@+id/mine_grid_view2"
           android:layout_width="match_parent"
           android:layout_height="200dp"/>
   </LinearLayout>

   <LinearLayout
       android:layout_marginTop="8dp"
       android:background="#ffffff"
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="更多推荐"
          android:textSize="20sp"
          android:layout_marginLeft="10dp"
          android:padding="5dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#F4F4F4"
          android:layout_marginLeft="10dp"
          android:padding="5dp"/>
        <include android:layout_height="1dp"
            android:layout_width="match_parent"
            layout="@layout/xiantiao_layout"/>
       <android.support.v7.widget.RecyclerView
           android:background="#ffffff"
           android:id="@+id/mine_grid_view3"
           android:layout_width="match_parent"
           android:layout_height="200dp"/>
   </LinearLayout>

</LinearLayout>