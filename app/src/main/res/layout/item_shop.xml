<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_iv_shop_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:paddingRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="麦当当的店"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/item_ratin_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:ratingBarStyleSmall"
                    android:stepSize="0.5"
                    android:progressDrawable="@drawable/ratingbar_full"
                    android:numStars="5"/>
                <TextView
                    android:id="@+id/item_xiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="11sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:text="@string/xiaoliang"/>
                <TextView
                    android:id="@+id/item_lucheng"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent"
                    android:text="1557.3分钟/2146.3.km"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_tv_peisongjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:text="@string/peisong"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_iv_jian"
                    android:src="@drawable/jian"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/item_tv_jian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#686868"
                    android:text="起送￥10|配送￥0|人均20"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_iv_zhe"
                    android:src="@drawable/jian"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/item_tv_zhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#686868"
                    android:text="起送￥10|配送￥0|人均20"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>